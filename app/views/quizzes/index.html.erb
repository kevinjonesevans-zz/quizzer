<h1>Listing quizzes</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Category</th>
    <th>Author</th>
    <th>Totalquestions</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @quizzes.each do |quiz| %>
  <tr>
    <td><%= quiz.title %></td>
    <td><%= quiz.category %></td>
    <td><%= quiz.author %></td>
    <td><%= quiz.total_questions %></td>
    <td><%= link_to 'Show', quiz %></td>
    <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
    <td><%= link_to 'Destroy', quiz, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

